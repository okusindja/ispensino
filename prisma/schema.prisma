generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  firebaseId String   @unique
  email      String   @unique
  createdAt  DateTime @default(now())
  pets       Pet[]
}

model Pet {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  species   SpeciesType
  breed     BreedType
  name      String
  photoUrl  String?
  birthdate DateTime
  createdAt DateTime    @default(now())
  allergies String?
  toys      Toy[]
}

model Toy {
  id        String   @id @default(uuid())
  petId     String
  pet       Pet      @relation(fields: [petId], references: [id])
  name      String
  createdAt DateTime @default(now())
}

enum SpeciesType {
  DOG
  CAT
  BIRD
  FISH
  REPTILE
  RODENT
}

enum BreedType {
  LABRADOR
  BEAGLE
  PERSIAN
  SIAMESE
  PARROT
  CANARY
  GOLDEN_RETRIEVER
  GERMAN_SHEPHERD
  HUSKY
  ROTTWEILER
  BENGAL
  SPHYNX
  HAMSTER
  GUINEA_PIG
}
